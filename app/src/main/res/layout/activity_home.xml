<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- Campo para buscar amigos por correo -->

    <!-- Botón para agregar amigo -->

    <!-- Lista de amigos -->

    <EditText
        android:id="@+id/etEmailSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="220dp"
        android:hint="Buscar por correo"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddFriend"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:text="Agregar amigo"
        app:layout_constraintTop_toBottomOf="@+id/etEmailSearch"
        tools:layout_editor_absoluteX="16dp" />

    <!-- Botones de navegación -->

    <!-- Botón de cerrar sesión -->

    <ListView
        android:id="@+id/lvFriends"
        android:layout_width="379dp"
        android:layout_height="184dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnLogout"
        tools:ignore="NotSibling"
        tools:layout_editor_absoluteX="16dp" />

    <ListView
        android:id="@+id/lvNotifications"
        android:layout_width="379dp"
        android:layout_height="184dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/btnProfile"
        app:layout_constraintTop_toBottomOf="@+id/lvFriends"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="NotSibling"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Perfil"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="537dp" />

    <Button
        android:id="@+id/btnNotifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:text="Notificaciones"
        app:layout_constraintTop_toBottomOf="@+id/btnProfile"
        tools:layout_editor_absoluteX="144dp" />

    <Button
        android:id="@+id/btnFriends"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:text="Amigos"
        app:layout_constraintTop_toBottomOf="@+id/btnNotifications"
        tools:layout_editor_absoluteX="146dp" />

    <LinearLayout
        android:id="@+id/btnNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/btnLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toStartOf="parent">

    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        app:layout_constraintTop_toBottomOf="@+id/btnAddFriend"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
